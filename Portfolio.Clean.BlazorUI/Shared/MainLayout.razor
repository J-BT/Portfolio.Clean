@using Portfolio.Clean.BlazorUI.Components.Common


@inherits LayoutComponentBase

<div class="page">
    @if (isLoaded)
    {
        <PortfolioNavbar></PortfolioNavbar>
        <Logo></Logo>
        <main>
            <article class="content">
                @Body
            </article>
        </main>
        <LanguageSelector></LanguageSelector>
        <PortfolioFooter></PortfolioFooter>
    }
    else
    {
        <CustomLoadingAnimation></CustomLoadingAnimation>
    }
</div>
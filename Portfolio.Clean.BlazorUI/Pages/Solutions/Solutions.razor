@page "/solutions"
@using Portfolio.Clean.BlazorUI.Components.Common
@using Portfolio.Clean.BlazorUI.Components.Solutions

<PageTitle> @LanguageContainer.Keys["Solutions:PageTabTitle"] </PageTitle>

@if (isLoaded)
{
    <SetPageTitle PageTitleName="@LanguageContainer.Keys["Solutions:PageTitle"]"></SetPageTitle>
    <div class="solutions-container">
        <div class="container">
            @foreach (var ResourceSolution in ResourceSolutions)
            {
                <div>
                    <div class="content">
                        <SolutionCard Rank="@ResourceSolution.Rank"
                            Title="@ResourceSolution.Title"
                            SubTitle1="@ResourceSolution.SubTitle1"
                            SubTitle2="@ResourceSolution.SubTitle2"
                            SubTitle3="@ResourceSolution.SubTitle3"
                            SubTitle4="@ResourceSolution.SubTitle4">
                        </SolutionCard>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <CustomLoadingAnimation></CustomLoadingAnimation>
}
